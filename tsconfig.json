{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        // "dom" only for `fetch`
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noUncheckedIndexedAccess": true,
        "paths": { "src/*": ["src/*"] },
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext"
    },
    "include": ["."],
    "exclude": ["node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
